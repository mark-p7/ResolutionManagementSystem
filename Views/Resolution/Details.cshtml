@model ResolutionManagement.Models.Resolution

@{
    ViewData["Title"] = "Details";
    FeedbackRequest[] AcceptedFeedbackRequests = ViewData["AcceptedFeedbackRequests"] as FeedbackRequest[];
}

<h1>Details</h1>

<div>
    <h4>Resolution</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ResolutionId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ResolutionId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Abstract)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Abstract)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerUserID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerUserID)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>

<br><br>
<h1>Resolved Feedback Requests</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Feedback Request ID
            </th>
            <th>
                Creation Date
            </th>
            <th>
                Description
            </th>
            <th>
                ESignature
            </th>
            <th>
                Resolved
            </th>
            <th>
                Accepted
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in AcceptedFeedbackRequests) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeedbackRequestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ESignature)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.OwnerUserID)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Resolved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accepted)
            </td>
            <td>
            </td>
        </tr>
}
    </tbody>
</table>